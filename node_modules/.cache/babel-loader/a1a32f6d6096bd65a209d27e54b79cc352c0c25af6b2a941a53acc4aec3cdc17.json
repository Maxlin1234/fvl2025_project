{"ast":null,"code":"import { useRoute } from 'vue-router';\nexport default {\n  name: 'PortfolioDetil',\n  setup() {\n    const route = useRoute();\n    const id = route.params.id;\n    const isEnglish = route.query.lang === 'en';\n    let work = null;\n    try {\n      const key = `work_${id}`;\n      const raw = localStorage.getItem(key);\n      work = raw ? JSON.parse(raw) : null;\n    } catch (e) {\n      console.error('Failed to parse work data:', e);\n    }\n    const coverUrl = work ? `https://unzip-clab-api.clab.org.tw/${work.photo_1}` : '';\n    return {\n      work,\n      coverUrl,\n      isEnglish\n    };\n  }\n};","map":{"version":3,"names":["useRoute","name","setup","route","id","params","isEnglish","query","lang","work","key","raw","localStorage","getItem","JSON","parse","e","console","error","coverUrl","photo_1"],"sources":["/Users/linhankuan/fvl2025/src/views/PortfolioDetil.vue"],"sourcesContent":["<!-- src/views/PortfolioDetil.vue -->\n<template>\n  <div class=\"work-detail\">\n    <div class=\"work-hero\">\n      <img :src=\"coverUrl\" alt=\"cover\" />\n    </div>\n    <div class=\"work-content\">\n      <h1 class=\"work-title\">{{ isEnglish ? work?.work_en?.title : work?.work_zh?.title }}</h1>\n      <div class=\"work-meta\">\n        <!-- <span>{{ isEnglish ? 'Artist' : '藝術家' }}：{{ isEnglish ? work?.work_en?.artist : work?.work_zh?.artist }}</span> -->\n        <span>{{ isEnglish ? 'Artist' : '藝術家' }}：<p>{{ work.work_zh }}</p></span>\n        <span>{{ isEnglish ? '藝術家' : 'Artist' }}：<p>{{ work.work_en.note }}</p></span>\n        <p>{{work.work_zh.proposal }}</p>\n        <p>{{work.work_en.proposal }}</p>\n      </div>\n      <div class=\"work-description\" v-html=\"isEnglish ? work?.work_en?.description : work?.work_zh?.description\"></div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { useRoute } from 'vue-router';\n\nexport default {\n  name: 'PortfolioDetil',\n  setup() {\n    const route = useRoute();\n    const id = route.params.id;\n    const isEnglish = route.query.lang === 'en';\n\n    let work = null;\n    try {\n      const key = `work_${id}`;\n      const raw = localStorage.getItem(key);\n      work = raw ? JSON.parse(raw) : null;\n    } catch (e) {\n      console.error('Failed to parse work data:', e);\n    }\n\n    const coverUrl = work ? `https://unzip-clab-api.clab.org.tw/${work.photo_1}` : '';\n\n    return { work, coverUrl, isEnglish };\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.work-detail {\n  background: #0e0e0e;\n  color: #f2f2f2;\n  min-height: 100vh;\n}\n.work-hero {\n  width: 100%;\n  height: 60vh;\n  background: #000;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n.work-hero img {\n  width: 100%;\n  height: 100%;\n  object-fit: cover;\n}\n.work-content {\n  max-width: 1000px;\n  margin: 0 auto;\n  padding: 32px 20px 64px;\n}\n.work-title {\n  font-size: 2rem;\n  margin-bottom: 16px;\n}\n.work-meta {\n  font-size: 0.95rem;\n  color: #aaa;\n  margin-bottom: 20px;\n}\n.work-description {\n  line-height: 1.8;\n  color: #ddd;\n}\n</style>"],"mappings":"AAqBA,SAASA,QAAO,QAAS,YAAY;AAErC,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIH,QAAQ,CAAC,CAAC;IACxB,MAAMI,EAAC,GAAID,KAAK,CAACE,MAAM,CAACD,EAAE;IAC1B,MAAME,SAAQ,GAAIH,KAAK,CAACI,KAAK,CAACC,IAAG,KAAM,IAAI;IAE3C,IAAIC,IAAG,GAAI,IAAI;IACf,IAAI;MACF,MAAMC,GAAE,GAAI,QAAQN,EAAE,EAAE;MACxB,MAAMO,GAAE,GAAIC,YAAY,CAACC,OAAO,CAACH,GAAG,CAAC;MACrCD,IAAG,GAAIE,GAAE,GAAIG,IAAI,CAACC,KAAK,CAACJ,GAAG,IAAI,IAAI;IACrC,EAAE,OAAOK,CAAC,EAAE;MACVC,OAAO,CAACC,KAAK,CAAC,4BAA4B,EAAEF,CAAC,CAAC;IAChD;IAEA,MAAMG,QAAO,GAAIV,IAAG,GAAI,sCAAsCA,IAAI,CAACW,OAAO,EAAC,GAAI,EAAE;IAEjF,OAAO;MAAEX,IAAI;MAAEU,QAAQ;MAAEb;IAAU,CAAC;EACtC;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}