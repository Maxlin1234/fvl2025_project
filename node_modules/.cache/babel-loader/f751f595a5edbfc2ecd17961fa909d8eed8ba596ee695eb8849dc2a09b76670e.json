ork-text\">\n          <h1 class=\"work-title\">{{ isEnglish ? work?.work_en?.title : work?.work_zh?.title }}</h1>\n          <div class=\"work-meta\">\n            <span>{{ isEnglish ? 'Artist' : '藝術家' }}：{{ isEnglish ? work?.work_en?.artist : work?.work_zh?.artist }}</span>\n          </div>\n          <div class=\"work-description\">{{ descriptionText }}</div>\n        </div>\n        <div class=\"artist-photo-placeholder\" aria-label=\"artist photo placeholder\"></div>\n      </div>\n    </div>\n\n    <div class=\"artist-section\">\n      <div class=\"artist-photo-placeholder\" aria-label=\"artist photo placeholder\"></div>\n      <div class=\"artist-info\">\n        <div class=\"artist-name\">{{ isEnglish ? work?.work_en?.artist : work?.work_zh?.artist }}</div>\n      </div>\n    </div>\n\n    <div v-if=\"secondaryUrl\" class=\"work-hero-row\">\n      <div class=\"work-hero\"><img :src=\"coverUrl\" alt=\"cover\" /></div>\n      <div class=\"work-hero\"><img :src=\"secondaryUrl\" alt=\"cover-2\" /></div>\n    </div>\n    <div v-else class=\"work-hero\">\n      <img :src=\"coverUrl\" alt=\"cover\" />\n    </div>\n  </div>\n  <div v-else class=\"work-detail loading\">{{ errorText || 'Loading...' }}</div>\n</template>\n\n<script>\nimport { useRoute } from 'vue-router';\nimport { ref, onMounted, onBeforeUnmount } from 'vue';\nimport axios from 'axios';\n\nexport default {\n  name: 'PortfolioDetil',\n  setup() {\n    const route = useRoute();\n    const id = String(route.params.id || '');\n\n    const isEnglish = ref(false);\n    const work = ref(null);\n    const coverUrl = ref('');\n    const secondaryUrl = ref('');\n    const descriptionText = ref('');\n    const errorText = ref('');\n\n    const resolveInitialLang = () => {\n      const q = route.query.lang;\n      if (q === 'en') return true;\n      if (q === 'zh') return false;\n      try { return localStorage.getItem('lang') === 'en'; } catch { return false; }\n    };\n\n    const pickFirstNonEmpty = (obj, keys) => {\n      for (const key of keys) {\n        const val = obj && typeof obj[key] === 'string' ? obj[key] : '';\n        if (val && val.trim().length > 0) return val;\n      }\n      return '';\n    };\n\n    const stripHtml = (html) => {\n      if (!html || typeof html !== 'string') return '';\n      const withNewlines = html.replace(/<br\\s*\\/?>(\\r\\n)?/gi, '\\n');\n      const temp = document.createElement('div');\n      temp.innerHTML = withNewlines;\n      const text = temp.textContent || temp.innerText || '';\n      return text;\n    };\n\n    const recalcDerived = () => {\n      coverUrl.value = work.value ? `https://unzip-clab-api.clab.org.tw/${work.value.photo_1}` : '';\n      const second = work.value?.photo_2 || work.value?.photo_3 || '';\n      secondaryUrl.value = second ? `https://unzip-clab-api.clab.org.tw/${second}` : '';\n\n      const langBlock = isEnglish.value ? work.value?.work_en : work.value?.work_zh;\n      const raw = pickFirstNonEmpty(langBlock || {}, ['description', 'proposal', 'note', 'summary', 'content', 'text']);\n      descriptionText.value = stripHtml(raw);\n    };\n\n    const loadFromLocal = () => {\n      try {\n        const key = `work_${id}`;\n        const raw = localStorage.getItem(key);\n        if (!raw) return false;\n        const parsed = JSON.parse(raw);\n        work.value = parsed;\n        recalcDerived();\n        return true;\n      } catch (e) {\n        console.error('Failed to parse work data from localStorage:', e);\n        return false;\n      }\n    };\n\n    const extractEntity = (data) => {\n      if (!data) return null;\n      if (Array.isArray(data?.results)) return data.results[0] || null;\n      if (data?.data && typeof data.data === 'object') return data.data; // some APIs wrap in data\n      if (typeof data === 'object') return data;\n      return null;\n    };\n\n    const fetchFromApi = async () => {\n      try {\n        const { data } = await axios.get(`https://unzip-clab-api.clab.org.tw/api/v1/works/${id}`);\n        const entity = extractEntity(data);\n        if (entity) {\n          work.value = entity;\n          recalcDerived();\n        } else {\n          errorText.value = 'No data for this work.';\n        }\n      } catch (e) {\n        console.error('Failed to fetch work by id:', e);\n        errorText.value = 'Failed to load work. Please try again later.';\n      }\n    };\n\n    const handleStorage = (e) => {\n      if (e.key === 'lang') {\n        isEnglish.value = e.newValue === 'en';\n        if (work.value) recalcDerived();\n      }\n    };\n\n    onMounted(async () => {\n      isEnglish.value = resolveInitialLang();\n      const ok = loadFromLocal();\n      if (!ok) await fetchFromApi();\n      window.addEventListener('storage', handleStorage);\n    });\n\n    onBeforeUnmount(() => {\n      window.removeEventListener('storage', handleStorage);\n    });\n\n    return { work, coverUrl, secondaryUrl, isEnglish, descriptionText, errorText };\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.work-detail {\n  background: #0e0e0e;\n  color: #f2f2f2;\n  min-height: 100vh;\n}\n.work-detail.loading {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n/* Images are now placed at bottom */\n.work-hero-row {\n  display: flex;\n  gap: 12px;\n  width: 100%;\n  height: 60vh;\n}\n.work-hero {\n  width: 100%;\n  height: 60vh;\n  background: #000;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  flex: 1;\n}\n.work-hero img {\n  width: 100%;\n  height: 100%;\n  object-fit: cover;\n}\n\n.work-content {\n  max-width: 1000px;\n  margin: 0 auto;\n  padding: 32px 20px 24px;\n}\n\n.work-body {\n  display: flex;\n  flex-direction: column;\n  gap: 30px;\n}\n\n.work-text {\n  flex: 1;\n  min-width: 0;\n}\n\n.work-title {\n  font-size: 2rem;\n  margin-bottom: 16px;\n}\n.work-meta {\n  font-size: 0.95rem;\n  color: #aaa;\n  margin-bottom: 20px;\n}\n.work-description {\n  line-height: 1.8;\n  color: #ddd;\n  white-space: pre-wrap;\n}\n\n.artist-section {\n  max-width: 1000px;\n  margin: 0 auto;\n  padding: 0 20px 40px;\n  display: flex;\n  gap: 24px;\n  align-items: center;\n}\n.artist-photo-placeholder {\n  width: 220px;\n  min-width: 220px;\n  height: 250px;\n  border: 2px solid #ffffff;\n  border-radius: 6px;\n  box-sizing: border-box;\n}\n.artist-info { flex: 1; min-width: 0; }\n.artist-name { font-size: 1.1rem; color: #f2f2f2; }\n\n@media (max-width: 768px) {\n  .work-hero-row {\n    flex-direction: column;\n    height: auto;\n  }\n  .work-hero {\n    height: 40vh;\n  }\n  .work-body {\n    flex-direction: column;\n  }\n  .artist-photo-placeholder {\n    width: 100%;\n    min-width: 0;\n    height: 220px;\n  }\n}\n</style>"],"mappings":";;;EAEOA,KAAK,EAAC;;;EACJA,KAAK,EAAC;AAAc;;EAClBA,KAAK,EAAC;AAAW;;EACfA,KAAK,EAAC;AAAW;;EAChBA,KAAK,EAAC;AAAY;;EACjBA,KAAK,EAAC;AAAW;;EAGjBA,KAAK,EAAC;AAAkB;;EAM9BA,KAAK,EAAC;AAAgB;;EAEpBA,KAAK,EAAC;AAAa;;EACjBA,KAAK,EAAC;AAAa;;;EAIHA,KAAK,EAAC;;;EACxBA,KAAK,EAAC;AAAW;;;EACjBA,KAAK,EAAC;AAAW;;;;EAEZA,KAAK,EAAC;;;;;EAIRA,KAAK,EAAC;;;SA7BaC,MAAA,CAAAC,IAAI,I,cAAnCC,mBAAA,CA4BM,OA5BNC,UA4BM,GA3BJC,mBAAA,CAWM,OAXNC,UAWM,GAVJD,mBAAA,CASM,OATNE,UASM,GARJF,mBAAA,CAMM,OANNG,UAMM,GALJH,mBAAA,CAAyF,MAAzFI,UAAyF,EAAAC,gBAAA,CAA/DT,MAAA,CAAAU,SAAS,GAAGV,MAAA,CAAAC,IAAI,EAAEU,OAAO,EAAEC,KAAK,GAAGZ,MAAA,CAAAC,IAAI,EAAEY,OAAO,EAAED,KAAK,kBACjFR,mBAAA,CAEM,OAFNU,UAEM,GADJV,mBAAA,CAA+G,cAAAK,gBAAA,CAAtGT,MAAA,CAAAU,SAAS,uBAAsB,GAAC,GAAAD,gBAAA,CAAGT,MAAA,CAAAU,SAAS,GAAGV,MAAA,CAAAC,IAAI,EAAEU,OAAO,EAAEI,MAAM,GAAGf,MAAA,CAAAC,IAAI,EAAEY,OAAO,EAAEE,MAAM,iB,GAEvGX,mBAAA,CAAyD,OAAzDY,UAAyD,EAAAP,gBAAA,CAAxBT,MAAA,CAAAiB,eAAe,iB,6BAElDb,mBAAA,CAAkF;IAA7EL,KAAK,EAAC,0BAA0B;IAAC,YAAU,EAAC;kCAIrDK,mBAAA,CAKM,OALNc,UAKM,G,0BAJJd,mBAAA,CAAkF;IAA7EL,KAAK,EAAC,0BAA0B;IAAC,YAAU,EAAC;8BACjDK,mBAAA,CAEM,OAFNe,UAEM,GADJf,mBAAA,CAA8F,OAA9FgB,WAA8F,EAAAX,gBAAA,CAAlET,MAAA,CAAAU,SAAS,GAAGV,MAAA,CAAAC,IAAI,EAAEU,OAAO,EAAEI,MAAM,GAAGf,MAAA,CAAAC,IAAI,EAAEY,OAAO,EAAEE,MAAM,iB,